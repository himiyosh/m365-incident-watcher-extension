{
  "manifest_version": 3,
  "name": "M365 Incident Watcher (v1.7.9)",
  "version": "1.7.9",
  "description": "lynx.office.net のインシデント更新を検知して通知します。",
  "permissions": ["storage", "alarms", "notifications", "tabs", "scripting", "webNavigation"],
  "host_permissions": ["https://lynx.office.net/*"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_popup": "popup.html", "default_title": "Incident Watcher" },
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
